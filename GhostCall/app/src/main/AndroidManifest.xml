<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tapfury.ghostcall" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ghostcallicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TourScreen"
            android:label="@string/title_activity_tour_screen" >
        </activity>
        <activity android:name=".VerificationScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize"
            >
        </activity>
        <activity android:name=".CodeVerificationScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize"
            >
        </activity>
        <activity
            android:name=".HomeScreen"
            android:screenOrientation="portrait"
             >
        </activity>
        <activity
            android:name=".GetGhostNumberScreen"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_get_ghost_number_screen" >
        </activity>
        <activity
            android:name=".SelectPackageScreen"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_select_package_screen" >
        </activity>
        <activity
            android:name=".HistoryScreen"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_history_screen" >
        </activity>
        <activity
            android:name=".CallScreen"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_call_screen"
            android:windowSoftInputMode="stateHidden"
            >
        </activity>
        <activity
            android:name=".HistorySettingsScreen"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_history_settings_screen" >
        </activity>
        <activity
            android:name=".SMSActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_history_settings_screen"
            android:parentActivityName="com.tapfury.ghostcall.HomeScreen"
            >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name=".HomeScreen"
                android:value="com.tapfury.ghostcall.HomeScreen" />
        </activity>

    </application>

</manifest>
