<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tapfury.ghostcall" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TourScreen"
            android:label="@string/title_activity_tour_screen" >
        </activity>
        <activity
            android:name=".VerificationScreen"
            android:label="@string/title_activity_verification_screen" >
        </activity>
        <activity
            android:name=".CodeVerificationScreen"
            android:label="@string/title_activity_code_verification_screen" >
        </activity>
    </application>

</manifest>
