<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.tapfury.ghostcall.SelectPackageScreen">

    <TextView
        fontPath="fonts/helveticaneue_light.ttf"
        android:text="Select a number package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="#22FFFFFF"
        android:padding="20dp"
        android:gravity="center"
        android:textSize="18sp"
        android:id="@+id/selectLabel"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/selectLabel"
        android:id="@+id/packageListView"
        android:divider="@color/white"
        >

    </ListView>

</RelativeLayout>
